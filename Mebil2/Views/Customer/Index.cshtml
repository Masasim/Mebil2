@model IEnumerable<Mebil2.Models.Customer>

<h2>Customer List</h2>

@if (Model == null || !Model.Any())
{
    <p>No customers found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Bank Details</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.id</td>
                    <td>@customer.name</td>
                    <td>@customer.address</td>
                    <td>@customer.bankDetails</td>
                    <td>
                        <a href="@Url.Action("Edit", "Customer", new { id = customer.id })">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
