@model Mebil2.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <h2>Customer Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.name</h5>
            <table class="table">
                <tr>
                    <th>ID</th>
                    <td>@Model.id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.name</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.address</td>
                </tr>
                <tr>
                    <th>Bank Details</th>
                    <td>@Model.bankDetails</td>
                </tr>
            </table>
            <div class="action-buttons">
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>